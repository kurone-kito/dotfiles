[alias]
	# Clone a repository including all submodules
	c = clone --recursive
	co = checkout
	cp = cherry-pick
	sw = switch
[apply]
	whitespace = fix
[core]
	autoCRLF = input
	editor = vim
	eol = lf
	excludesfile = ~/.gitignore
	longpaths = true
	untrackedCache = true
[commit]
	gpgsign = true
[delta]
    features = side-by-side line-numbers decorations
[diff]
	compactionHeuristic = true
	renames = copies
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[help]
	autocorrect = 1
[http]
	postBuffer = 524288000
[merge]
	ff = false
	log = true
[pull]
	ff = only
	rebase = true
[push]
	followTags = true
[rebase]
	autostash = true
